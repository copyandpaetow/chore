{
	"name": "chore",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"start": "npm run build:client && npm run build:server",
		"dev": "npm run watch:client & npm run watch:server & wait",
		"watch:server": "node --env-file config.dev.env --experimental-sqlite --watch-path=./src/server --watch src/index.ts",
		"start:server": "node --env-file config.prod.env --experimental-sqlite src/index.ts",
		"watch:client": "node build.ts --watch-path=./src/pages",
		"build:client": "node build.ts"
	},
	"browserslist": "> 0.5%, last 2 versions, not dead",
	"devDependencies": {
		"@chialab/esbuild-plugin-html": "^0.18.2",
		"@types/bcrypt": "^5.0.2",
		"@types/cors": "^2.8.18",
		"@types/express": "^5.0.1",
		"@types/node": "^22.15.17",
		"@types/web-push": "^3.6.4",
		"esbuild": "^0.25.4",
		"typescript": "^5.8.3"
	},
	"dependencies": {
		"@oslojs/crypto": "^1.0.1",
		"@oslojs/encoding": "^1.1.0",
		"bcrypt": "^6.0.0",
		"cors": "^2.8.5",
		"express": "^5.1.0",
		"grundlage": "^0.0.1",
		"happy-dom": "^17.4.6",
		"web-push": "^3.6.7"
	}
}
