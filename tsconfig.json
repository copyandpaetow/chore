{
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"outDir": "dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"allowImportingTsExtensions": true,
		"declaration": true,
		"emitDeclarationOnly": true
	},
	"include": ["src/**/*", "src/config.ts", "public"],
	"exclude": ["public/js/**/*"] // Exclude client-side TS files
}
