{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ES2020",
		"moduleResolution": "node",
		"outDir": "./public",
		"rootDir": "./src",
		"sourceMap": true,
		"lib": ["DOM", "ES2020"],
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"include": ["src/pages/**/index.ts", "src/client/**/*.ts"],
	"exclude": ["node_modules"]
}
